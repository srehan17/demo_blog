<section class="section">
  <%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <!-- <div class="field"> <div class="control"> <%#= f.trix_editor :body %> </div> </div> -->
  <div class="field">
    <div class="control" id="control-textarea">
      <%= f.rich_text_area :content %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-primary" %>
<% end %>
<br/>
<%= link_to "Back", root_path %>
</section>